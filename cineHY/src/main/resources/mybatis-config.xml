<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<setting name="jdbcTypeForNull" value="NULL" />  
  	</settings>	
  	
  	<typeAliases>
  		<typeAlias type="com.hy.myapp.movie.model.vo.Movie" alias="movie" />
  		<typeAlias type="com.hy.myapp.review.model.vo.Review" alias="review"/>
  		
  		<typeAlias type="com.hy.myapp.movieSchedule.model.vo.MovieSchedule" alias="movieSchedule" />
  		<typeAlias type="com.hy.myapp.movieSchedule.model.vo.MovieScheduleVO" alias="movieScheduleVO" />
  		<typeAlias type="com.hy.myapp.theater.model.vo.Theater" alias="theater" />
  		<typeAlias type="com.hy.myapp.screen.model.vo.Screen" alias="screen" />
  		<typeAlias type="com.hy.myapp.payment.model.vo.PaymentVO" alias="payment"/>
  		<typeAlias type="com.hy.myapp.payment.model.vo.PrePaymentVO" alias="prePayment"/>
  		<typeAlias type="com.hy.myapp.product.model.vo.ProductVO" alias="product"/>
  		<typeAlias type="com.hy.myapp.cart.model.vo.CartVO" alias="cart"/>
  		<typeAlias type="com.hy.myapp.member.model.vo.Member" alias="member" />
  		<typeAlias type="com.hy.myapp.qna.model.vo.Qna" alias="qna" />
  		<typeAlias type="com.hy.myapp.openTalk.model.vo.OpenTalk" alias="openTalk" />
  		<typeAlias type="com.hy.myapp.notice.model.vo.Notice" alias="notice" />
  		
  		<typeAlias type="com.hy.myapp.review.model.vo.Review" alias="NoreviewResultMap" />
  		
  	</typeAliases>
  	<!-- 주의할 점! : 별칭 등록을 하기 위해서는 반드시 해당 클래스가 존재해야 함! -->
  	
  	<mappers>
  		<mapper resource="/mapper/movie-mapper.xml"/>
  		<mapper resource="/mapper/review-mapper.xml"/>
  		<mapper resource="/mapper/movieSchedule-mapper.xml"/>
  		<mapper resource="/mapper/payment-mapper.xml"/>
  		<mapper resource="/mapper/prePayment-mapper.xml"/>
  		<mapper resource="/mapper/product-mapper.xml"/>
  		<mapper resource="/mapper/cart-mapper.xml"/>
  		<mapper resource="/mapper/member-mapper.xml"/>
  		<mapper resource="/mapper/openTalk-mapper.xml"/>
  		<mapper resource="/mapper/qna-mapper.xml"/>
  		<mapper resource="/mapper/notice-mapper.xml"/>
  		
  	</mappers>
  	<!-- 주의할 점! : 매퍼 파일을 등록하기 위해서는 반드시 해당 경로에 파일이 존재해야하며 namespace 속성값도 존재해야함! -->
	
	<!--   	
		environments, dataSource에 기술했던 DB 연결정보
		서버 켜짐과 동시에 읽혀지는 파일인 root-context.xml에 기술할 예정 => Spring Bean  	
	 -->  	
  	
  
</configuration>